{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "jsx": "react",
    "outDir": "build/dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "node_modules/*", 
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
