{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "jsx": "react",
    "outDir": "compile",
    "baseUrl": ".",
    "paths": {
      "styles/*": [
        "styles/*"
      ],
      "assets/*": [
        "assets/*"
      ],
      "*": [
        "*",
        "node_modules/*", 
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "webpack",
    "*.config.js",
    "<outDir>"
  ]
}
